host: "{{listen_address}}:{{listen_port}}"
tags:
{{#each tags as |tag|}}
  - {{tag}}
{{/each}}
{{#if ssl_certificate}}
ssl.certificate: {{ssl_certificate}}
ssl.key: {{ssl_key}}
{{/if}}
processors:
  - add_locale: ~
{{#if preserve_original_event}}
  - copy_fields:
      fields:
        - from: message
          to: event.original
      fail_on_error: false
      ignore_missing: true
{{/if}}
{{#if timezone}}
  - add_fields:
      target: event
      fields:
        timezone: {{timezone}}
{{/if}}
{{#if custom_processors}}
{{custom_processors}}
{{/if}}
